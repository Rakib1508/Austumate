@model IEnumerable<Austumate.Models.EnrollStudentModel>

@{
    ViewBag.Title = "StudentList";
}

<h2 class="mt-5 mb-4">StudentList</h2>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.StudentID)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CourseID)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TeacherID)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Semester.Session)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Student.StudentName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Course.CourseName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Teacher.TeacherName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Semester.Session)
            </td>
            <td>
                @Html.ActionLink("Drop Course", "Delete", new { id = item.EnrollStudentID, @class = "nav-link" })
            </td>
        </tr>
    }

</table>
