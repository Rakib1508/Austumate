<div class="container-fluid row justify-content-center gap">

    <div class="row">

        <h2>Contact AuStuMate team</h2>

    </div>
    <div class="col-8">

        <form class="needs-validation" id="contact-form" novalidate>

            <div class="container-fluid">
                <div class="row">
                    <div class="col-5 mb-3">
                        <input type="text" class="form-control" id="full-name" name="Name" placeholder="Type your full name" required>
                        <div class="invalid-feedback">
                            Name is required!
                        </div>
                    </div>

                    <div class="col-7 mb-3">
                        <input type="email" class="form-control" id="email" name="Contact-mail" placeholder="Provide an email ID" required>
                        <div class="invalid-feedback">
                            Email is required!
                        </div>
                    </div>
                </div>
            </div>

            <div class="container-fluid mb-3">
                <input type="text" class="form-control" id="subject" name="Subject" placeholder="Subject of message" required>
                <div class="invalid-feedback">
                    Message will be treated as spam without subject
                </div>
            </div>

            <div class="container-fluid mb-3">
                <textarea class="form-control" cols="3" id="message" name="Message" placeholder="Type your message here..." required></textarea>
                <div class="invalid-feedback">
                    Empty message cannot be sent
                </div>
            </div>

            <div class="row  justify-content-end">
                <div class="col-2 mr-3">
                    <button class="btn btn-primary" type="submit">Send</button>
                </div>
            </div>
        </form>

    </div>

</div>